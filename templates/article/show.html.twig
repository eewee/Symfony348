{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}

	{{ dump() }}

	{# TITLE #}
	<h1>{{ title }}</h1>
    <i><a href="{{ path('blog_show', {'slug': 'slug-value'}) }}">{{ url }}</a></i>
	<div class="desc">
		{{ desc }}
	</div>

	{# COMMENTS #}
	<h2>Comments ({{ comments|length }})</h2>
	<ul>
	{% for comment in comments %}
		<li>{{ comment }}</li>
	{% endfor %}
	</ul>

{% endblock %}